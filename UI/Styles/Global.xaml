<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:UI.Utilities">
    
    <Style x:Key="Bord" TargetType="Border">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="BorderThickness" Value="0"/>
        
        <Setter Property="Margin" Value="4 4 4 0"/>
        <Setter Property="Padding" Value="0"/>
    </Style>
    
    <Style TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Bold"/>
        
        <Setter Property="BorderThickness" Value="0"/>
        
        <Setter Property="MinWidth" Value="30"/>
        <Setter Property="MinHeight" Value="30"/>
        
        <Setter Property="Margin" Value="4 4 4 0"/>
        <Setter Property="Padding" Value="8 0 8 0"/>
    </Style>
    
    <Style TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundSecondaryColor}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="utils:TextBoxHelper.PlaceholderForeground" Value="{StaticResource TextDisabledColor}"/>
        <Setter Property="CaretBrush" Value="{StaticResource TextPrimaryColor}"/>
        <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
        
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Regular"/>
        
        <Setter Property="BorderThickness" Value="0"/>
        
        <Setter Property="MinWidth" Value="0"/>
        <Setter Property="MinHeight" Value="0"/>
        
        <Setter Property="Margin" Value="0"/>
        <Setter Property="Padding" Value="5"/>
    </Style>
</ResourceDictionary>